            <h3 class="title">LIÊN HỆ</h3>
            <div class="row">
                <form asp-area="admin" asp-controller="Contact" asp-action="Create" style="display: flex;flex-wrap: wrap;">
                    <div class="col-6">
                        <input asp-for="FullName" type="text" class="form-control mb-4" placeholder="Họ và tên" />
                    </div>
                    <div class="col-6">
                        <input asp-for="EmailAddress" type="email" class="form-control mb-4" placeholder="Email"/>
                    </div>
                    <div class="col-12">
                        <textarea asp-for="Context" rows="5" class="form-control mb-4" placeholder="Nội dung liên hệ"></textarea>
                        <button class="float-right btn btn-primary btn-round">Gửi</button>
                    </div>
                </form>
            </div>

        </div>
