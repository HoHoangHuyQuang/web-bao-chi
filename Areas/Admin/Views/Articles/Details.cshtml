@model NewsApp.Models.Article

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1>Details</h1>

<div>
    <h4>Article</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleDescription)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ArticleContent)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ArticleContent)
        </dd>
        <dt class="col-sm-2">
            <span>Post Image</span>
        </dt>
        <dd class="col-sm-10">
            <img src="@ViewBag.Image" style="width: 200px; height:150px;" id="image_upload_preview" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PublishTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PublishTime)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ViewsCount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ViewsCount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuthorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuthorName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ArticleID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
